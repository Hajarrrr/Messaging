{% extends 'base.html.twig' %}


{% block title %}Messages:{% endblock %}

{% block body %}

    <br/>
    <h1>Messages:</h1>

    <div class="topcorner">
        Welcome, {{ app.user.username }}
    </div>


    <br/>
    {% include 'layouts/_message.html.twig' %}
    <table class="table table-striped">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">sender</th>
            <th scope="col">Message</th>
            <th scope="col">Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for index, message in messages %}
            <tr>
                <th scope="row">{{ index + 1 }}</th>
                <th >{{ message.sender }}</th>
                <td>{{ message.description }}</td>
                <td>
                
                    
                
                    {% set nav = app.user %}
                    {% if message.sender==nav %}
                       <a href="{{ path('app_edit_task_service-params-convert',{'id':message.id}) }}">Edit</a>
                        <a href="{{ path('app_delete_task_service', {'id':message.id}) }}">Delete</a>
                    {% endif %}


                </td>
            </tr>
        {% else %}
            <tr>
                <th colspan="3" scope="row">No results found, add amessage by pressing in the top!</th>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}



